<h1>
  Adventure Time
  <hr>
</h1>

<u>Running Stories:</u>
<br><br>
<ol>
  <% @stories.not_done.each do |story| %>
    <li> <%= link_to story.title, story_path(story.id) %> - <%= link_to "Edit", edit_story_path(story.id) %>
                            <%= link_to "[x]", story_path(story.id),
                                                       :data => {:confirm => "Are you sure you want to delete this story?",
                                                       :method => "delete"} %> </li>
  <% end %>
</ol>

<br><br>

<u>Completed Stories:</u>
<br><br>
<ol>
  <% @stories.done.each do |story| %>
    <li><%= link_to story.title, story_path(story.id) %> - <%= link_to "[x]", story_path(story.id),
                               :data => {:confirm => "Are you sure you want to delete this story?",
                               :method => "delete"} %></li>
  <% end %>
</ol>

<br><br>
